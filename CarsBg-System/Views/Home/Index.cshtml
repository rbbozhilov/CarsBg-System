@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    int allCars = @Model.VipCarsImages.Count + @Model.TopCarsImages.Count;
    int indicatorCount = 0;
    int itemActive = 0;
}

@if (@Model.TopCarsImages.Any() || @Model.VipCarsImages.Any())
{
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                <ol class="carousel-indicators">
                        @for (int i = 0; i < allCars; i++)
                        {

                            if (indicatorCount == 0)
                            {
                                <li data-target="#myCarousel" data-slide-to="@indicatorCount" class="active"></li>
                                indicatorCount++;
                                continue;
                            }

                            <li data-target="#myCarousel" data-slide-to="@indicatorCount"></li>
                            indicatorCount++;
                        }
                    </ol>

                    <!-- Wrapper for slides -->

                <div class="carousel-inner" role="listbox">

                        @foreach (var vipCarImage in @Model.VipCarsImages)
                        {
                            @if (itemActive == 0)
                            {
                                itemActive++;

                                <div class="item active">
                                    <img src="/Home/CourseImages/@vipCarImage.ImageId" />
                                    <div class="carousel-caption">
                                        <h3><a asp-controller="Car" asp-action="ViewCar" asp-route-id="@vipCarImage.CarId" class="btn btn-danger">View</a></h3>
                                        <p>
                                            <img src="https://www.bookiesignupoffers.com/wp-content/uploads/2021/10/vip-scheme.jpg" width="50" height="50" />
                                        </p>

                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img src="/Home/CourseImages/@vipCarImage.ImageId" />
                                    <div class="carousel-caption">
                                        <h3><a asp-controller="Car" asp-action="ViewCar" asp-route-id="@vipCarImage.CarId" class="btn btn-danger">View</a></h3>
                                        <p>
                                            <img src="https://www.bookiesignupoffers.com/wp-content/uploads/2021/10/vip-scheme.jpg" width="50" height="50" />
                                        </p>

                                    </div>
                                </div>
                            }
                        }


                        @foreach (var topCarsImage in @Model.TopCarsImages)
                        {

                            <div class="item">
                                <img src="/Home/CourseImages/@topCarsImage.ImageId" />
                                <div class="carousel-caption">
                                    <h3><a asp-controller="Car" asp-action="ViewCar" asp-route-id="@topCarsImage.CarId" class="btn btn-danger">View</a></h3>
                                    <p>
                                        <img src="https://img.freepik.com/premium-vector/top-brand-golden-label-sign_118124-4688.jpg" width="50" height="50" />
                                    </p>
                                </div>
                            </div>
                        }

                    </div>

                    <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="well">
                    <p>
                        QUALITY &#x2713; &#x2713; &#x2713;
                    </p>
                </div>
                <div class="well">
                    <p>SERVICE &#x2713; &#x2713; &#x2713;</p>
                </div>
                <div class="well">
                    <p>VARIETY &#x2713; &#x2713; &#x2713;</p>
                </div>
            </div>
        </div>
        <hr>
    </div>
}


