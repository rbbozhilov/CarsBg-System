@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    int allCars = @Model.VipCarsImages.Count + @Model.TopCarsImages.Count;
    int indicatorCount = 0;
    int itemActive = 0;
}


<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < allCars; i++)
                    {

                        if (indicatorCount == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to="@indicatorCount" class="active"></li>
                            indicatorCount++;
                            continue;
                        }

                        <li data-target="#myCarousel" data-slide-to="@indicatorCount"></li>
                        indicatorCount++;
                    }
                </ol>

                <!-- Wrapper for slides -->

                <div class="carousel-inner" role="listbox">

                    @foreach (var vipCarImage in @Model.VipCarsImages)
                    {
                        @if (itemActive == 0)
                        {
                            itemActive++;

                            <div class="item active">
                                <img src="/Home/CourseImages/@vipCarImage.ImageId" />
                                <div class="carousel-caption">
                                    <h3>Sell $</h3>
                                    <p>Money Money.</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="/Home/CourseImages/@vipCarImage.ImageId" />
                                <div class="carousel-caption">
                                    <h3>Sell $</h3>
                                    <p>Money Money.</p>
                                </div>
                            </div>
                        }
                    }


                    @foreach (var topCarsImage in @Model.TopCarsImages)
                    {

                        <div class="item">
                            <img src="/Home/CourseImages/@topCarsImage.ImageId" />
                            <div class="carousel-caption">
                                <h3>Sell $</h3>
                                <p>Money Money.</p>
                            </div>
                        </div>

                    }


                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="well">
                <p>
                    QUALITY &#x2713; &#x2713; &#x2713;
                </p>
            </div>
            <div class="well">
                <p>SERVICE &#x2713; &#x2713; &#x2713;</p>
            </div>
            <div class="well">
                <p>VARIETY &#x2713; &#x2713; &#x2713;</p>
            </div>
        </div>
    </div>
    <hr>
</div>

<div class="container text-center">
    <h3>Our Partners</h3>
    <br>
    <div class="row">
        <div class="col-sm-2">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/44/BMW.svg/2048px-BMW.svg.png" class="img-responsive" style="width:100%" alt="Image">
            <p>BMW</p>
