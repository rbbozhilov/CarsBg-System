@model IEnumerable<ShowCarViewModel>

@{
    ViewData["Title"] = "All Cars";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Car Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentCar in Model)
                {
                    <tr>
                        <td>@currentCar.Name</td>
                        <td>@currentCar.Price</td>
                        <td><a asp-controller="Car" asp-action="EditCar" asp-route-id="@currentCar.Id" class="btn btn-primary">Edit</a></td>
                        <td><a asp-controller="Car" asp-action="DeleteCar" asp-route-id="@currentCar.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have classes yet , try soon !</h1>
    }
