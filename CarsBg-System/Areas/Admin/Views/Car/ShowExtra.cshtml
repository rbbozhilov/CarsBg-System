@model IEnumerable<ShowExtraViewModel>



@{
    ViewData["Title"] = "All Extras";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Extra Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentExtra in Model)
                {
                    <tr>
                        <td>@currentExtra.Name</td>
                        <td><a asp-controller="Car" asp-action="DeleteExtra" asp-route-id="@currentExtra.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have extras yet , try soon !</h1>
    }
