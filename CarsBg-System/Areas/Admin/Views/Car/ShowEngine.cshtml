@model IEnumerable<ShowEngineViewModel>



@{
    ViewData["Title"] = "All Engines";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Engine Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentEngine in Model)
                {
                    <tr>
                        <td>@currentEngine.Name</td>
                        <td><a asp-controller="Car" asp-action="DeleteEngine" asp-route-id="@currentEngine.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have engines yet , try soon !</h1>
    }
