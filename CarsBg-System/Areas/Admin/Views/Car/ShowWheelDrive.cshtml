@model IEnumerable<ShowWheelDriveViewModel>



@{
    ViewData["Title"] = "All WheelDrives";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">WheelDrive Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentWheelDrive in Model)
                {
                    <tr>
                        <td>@currentWheelDrive.Name</td>
                        <td><a asp-controller="Car" asp-action="DeleteWheelDrive" asp-route-id="@currentWheelDrive.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have wheeldrives yet , try soon !</h1>
    }
