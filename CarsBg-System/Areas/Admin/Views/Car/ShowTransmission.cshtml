@model IEnumerable<ShowTransmissionViewModel>



@{
    ViewData["Title"] = "All Transmissions";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Transmission Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentTransmission in Model)
                {
                    <tr>
                        <td>@currentTransmission.Name</td>
                        <td><a asp-controller="Car" asp-action="DeleteTransmission" asp-route-id="@currentTransmission.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have transmissions yet , try soon !</h1>
    }
