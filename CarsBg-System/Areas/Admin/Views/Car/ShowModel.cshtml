@model IEnumerable<ShowModelViewModel>



@{
    ViewData["Title"] = "All Models";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Model Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentModel in Model)
                {
                    <tr>
                        <td>@currentModel.Name</td>
                        <td><a asp-controller="Car" asp-action="DeleteModel" asp-route-id="@currentModel.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have models yet , try soon !</h1>
    }
