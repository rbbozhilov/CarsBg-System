@model ModelFormModel

@{
    ViewData["Title"] = "Add Model";
}

<form method="post">
    @Html.ValidationSummary(false, "", new { @class = "alert-danger"})

    <div class="form-group">
        <label asp-for="BrandId">Choose Brand</label>
        <select name='BrandId' asp-for="BrandId" class="form-control form-control-sm">
            @foreach (var brand in Model.Brands)
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        </select>
        <span asp-validation-for="BrandId" class="small text-danger"> </span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input placeholder="Input name" asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="small text-danger"> </span>
    </div>

    <button asp-action="AddModel" class="btn btn-primary">Add</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}