@model IEnumerable<ShowStatusViewModel>



@{
    ViewData["Title"] = "All Statuses";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Status Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentStatus in Model)
                {
                    <tr>
                        <td>@currentStatus.Name</td>
                        <td><a asp-controller="Status" asp-action="Delete" asp-route-id="@currentStatus.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have statuses yet , try soon !</h1>
    }
