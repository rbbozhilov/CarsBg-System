@model IEnumerable<ShowBrandViewModel>



@{
    ViewData["Title"] = "All Brands";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Brand Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentBrand in Model)
                {
                    <tr>
                        <td>@currentBrand.Name</td>
                        <td><a asp-controller="Brand" asp-action="Delete" asp-route-id="@currentBrand.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have brands yet , try soon !</h1>
    }
