@model IEnumerable<ShowReportViewModel>

@{
    ViewData["Title"] = "All Reports";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Comment</th>
                    <th scope="col">Report Count</th>
                    <th scope="col">Car</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Clear Report</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentReport in Model)
                {
                    <tr>
                        <td>@currentReport.Comment</td>
                        <td>@currentReport.Count</td>
                         <td><a asp-area="" asp-controller="Car" asp-action="ViewCar" asp-route-id="@currentReport.CarId" class="btn btn-primary">View car</a></td>
                        <td><a asp-controller="Post" asp-action="DeletePost" asp-route-id="@currentReport.PostId" class="btn btn-danger">Delete post</a></td>
                        <td><a asp-controller="Post" asp-action="ClearReports" asp-route-id="@currentReport.PostId" class="btn btn-warning">Clear report</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have reports yet , try soon !</h1>
    }
