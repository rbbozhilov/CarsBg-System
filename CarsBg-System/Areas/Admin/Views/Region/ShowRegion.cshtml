@model IEnumerable<ShowRegionViewModel>

@{
    ViewData["Title"] = "All regions";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Region Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentRegion in Model)
                {
                    <tr>
                        <td>@currentRegion.Name</td>
                        <td><a asp-controller="Region" asp-action="Delete" asp-route-id="@currentRegion.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have regions yet , try soon !</h1>
    }
</div>